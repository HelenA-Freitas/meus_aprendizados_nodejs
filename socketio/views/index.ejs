<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Document</title>
</head>
<style>
    #chat{
        max-height: 500px;
        min-height: 500px;
        background-color: aliceblue;
        overflow-y: scroll;
    }
</style>
<body>
    <h1>Chat do Guia</h1>
    <div id="chat">

    </div><br>
    <textarea type="text" name="" id="msg" class="form-control" placeholder="Mensagem" rows=" 3"></textarea>
    <input type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control">
    <button onclick="send()" class="btn btn-primary" type="button">Enviar</button>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js"></script>
<script>
    const socket = io('http://localhost:3000');
    socket.on('disconnect', () => {
        console.log('Desconectado');
    });

    socket.on('showmsg', (data) => {
        console.log(data);

        const chat = document.getElementById('chat');
        const p = document.createElement('p');

        p.innerHTML = data.username + ': ' + data.msg;
        chat.append(p);
    });

    function send(){
        const msgField = document.getElementById('msg');
        const usernameField = document.getElementById('username');

        const msg = msgField.value;
        const username = usernameField.value;

        socket.emit('msg', {msg: msg, username: username});
    }

</script>
</html>